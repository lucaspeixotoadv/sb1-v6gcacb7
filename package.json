    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.0.3",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "glob": "^9.3.5",
    "helmet": "^7.1.0",
    "immer": "^10.0.3",
    "ioredis": "^5.3.2",
    "jose": "^5.9.6",
    "lucide-react": "^0.344.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "qrcode.react": "^3.2.0",
    "rate-limiter-flexible": "^3.0.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.1",
    "reactflow": "^11.10.1",
    "rimraf": "^4.4.1",
