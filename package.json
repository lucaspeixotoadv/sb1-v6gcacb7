{
  "name": "whatsapp-crm",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "nodemon --watch 'server/**/*.ts' --exec 'ts-node' server/index.ts",
    "dev:full": "concurrently -n client,server \"npm run dev\" \"npm run dev:server\"",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "build:client": "tsc && vite build",
    "build:server": "tsc -p server/tsconfig.json",
    "clean": "rimraf dist",
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest",
    "migrate": "node dist/server/db/migrate.js",
    "seed": "node dist/server/db/seed.js",
    "validate:env": "ts-node scripts/validate-env.ts"
  },
  "dependencies": {
