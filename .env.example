# Ambiente
NODE_ENV=development                           # development ou production
PORT=3000                                     # Porta do servidor

# URLs e Domínios
BASE_URL=http://localhost:3000                # URL base em desenvolvimento
API_URL=http://localhost:3000/api             # URL da API em desenvolvimento
VITE_BASE_URL=http://localhost:3000           # Para desenvolvimento com Vite
VITE_API_URL=http://localhost:3000/api        # Para desenvolvimento com Vite

# Segurança - Desenvolvimento (prefixo VITE_)
VITE_JWT_SECRET=                              # Min. 32 caracteres
VITE_ENCRYPTION_KEY=                          # Min. 32 caracteres
VITE_TOKEN_EXPIRY=15m                         # Tempo de expiração do JWT
VITE_REFRESH_TOKEN_EXPIRY=7d                  # Tempo de expiração do refresh token

# Segurança - Produção
JWT_SECRET=                                   # Min. 32 caracteres
ENCRYPTION_KEY=                               # Min. 32 caracteres
TOKEN_EXPIRY=15m                              # Tempo de expiração do JWT
REFRESH_TOKEN_EXPIRY=7d                       # Tempo de expiração do refresh token

# Nota: Em desenvolvimento, use as variáveis com prefixo VITE_
# Em produção, use as variáveis sem prefixo
# Nunca compartilhe ou commite valores reais, apenas este exemplo