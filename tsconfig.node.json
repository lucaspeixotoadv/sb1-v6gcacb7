{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "CommonJS",
    "skipLibCheck": true,

    /* Node.js Configuration */
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Source Maps */
    "sourceMap": true
  },
  "include": ["vite.config.ts", "server/**/*"]
}
